<!-- Show the user the current wedding, a form for a new invitee, and invitees. -->
<div class="row">
  <div class="col-auto">
    <h2>Welcome,
      {{username}}
      .Cody you need to add Wedding info near here likely above the new invitee
      form!</h2>
    <h2>Wedding Name {{wedding.event_title}} Date .... Time .... </h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Invitee:</h3>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Invitee Name:</label>
        <input
          class="form-input"
          type="text"
          id="project-name"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <label for="project-desc">Other Stuff??:</label>
        <textarea
          class="form-input"
          id="project-desc"
          name="project-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    <br>
    <img src="../public/images/qrcode.png" class="rounded mx-auto d-block" alt="qrcode invitation">
  </div>


  {{#if invitees.length}}
    <div class="col-md-6 project-list">
      <h3>Current Invitees:</h3>

      {{#each invitees as |invitee|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a
                href="/project/{{invitee.id}}"
              >{{invitee.first_name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{invitee.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>